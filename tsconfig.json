{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es3",
    "lib": ["esnext", "dom", "dom.iterable"],
    "outDir": "./dist/",
    "baseUrl": ".",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "paths": {
      "src/*": ["./src/*"],
      "server/*": ["./server/*"]
    },
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "include": ["src/pages/**/*"],
  "exclude": ["node_modules/**/*"]
}
