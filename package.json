{
  "name": "store-web",
  "version": "0.0.1",
  "dependencies": {
    "@emotion/core": "^10.0.7",
    "@emotion/styled": "^10.0.7",
    "@ridi/web-ui": "^0.2.1",
    "babel-plugin-emotion": "^10.0.7",
    "emotion": "^10.0.7",
    "emotion-server": "^10.0.7",
    "express": "^4.16.4",
    "next": "^7.0.2",
    "next-routes": "^1.4.2",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.1",
    "ts-node": "^8.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@ridi/tslint-config": "^0.1.0",
    "@types/express": "^4.16.1",
    "@types/next": "^7.0.9",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@zeit/next-typescript": "^1.1.1",
    "babel-jest": "^24.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.1"
  },
  "scripts": {
    "format": "yarn prettier --write ",
    "prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx|graphql|vue)\"",
    "lint": "tslint \"./+(!node_modules|src|server)/**/*.+(ts|tsx)\" -c tslint.json --fix",
    "validate": "yarn lint && yarn format && yarn prettier --list-different \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx|graphql|vue)\"",
    "build": "next build src",
    "local": "pm2-runtime start ecosystem.config.js --only store-ssr-server --env local "
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && next build src"
    }
  },
  "browserslist": [
    "last 2 versions",
    "Android >= 4.2",
    "iOS >= 10",
    "ie > 10"
  ]
}
